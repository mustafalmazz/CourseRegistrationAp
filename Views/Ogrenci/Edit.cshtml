@model Ogrenci

@{
    ViewBag.Title = "Öğrenci Düzenle";
}

<h1>Öğrenci Düzenle</h1>
<hr />
<div class="row">
    <div class="col-8">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgrenciId" />
            <div class="mb-3">
                <label asp-for="OgrenciAd" class="form-label">Ad</label>
                <input asp-for="OgrenciAd" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="OgrenciSoyad" class="form-label">Soyad</label>
                <input asp-for="OgrenciSoyad" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta</label>
                <input asp-for="Eposta" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input asp-for="Telefon" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Kurslar</h4>
        <hr />
        <ul>
            @foreach (var item in Model.KursKayitlari)
            {
                <li>@item.Kurs.Baslik</li>
            }
        </ul>
    </div>
</div>
