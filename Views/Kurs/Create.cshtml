@model Kurs
@{
    ViewData["Title"] = "Kurs Ekle";
}
<h1 class="text-center">Kurs Ekle</h1>
<hr />
<form asp-action="create" method="post">
    <div class="mb-2">
        <label asp-for="Baslik" class="form-label">Kurs Başlığı</label>
        <input asp-for="Baslik" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="OgretmenId">Öğretmen</label>
        <select asp-for="OgretmenId" asp-items="@ViewBag.OgretmenListesi " class="form-select">
            <option value="">Seçiniz...</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>