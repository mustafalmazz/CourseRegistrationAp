@model Kurs
@{
    ViewData["Title"] = "Kurs Düzenle";
}
<h1 class="text-center">Kurs Düzenle</h1>
<hr />
<div class="row">
    <div class="col-8">
        <form method="post">
            <input type="hidden" asp-for="KursId" />
            <div class="mb-2">
                <label asp-for="Baslik" class="form-label">Kurs Adı</label>
                <input asp-for="Baslik" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.OgretmenListesi" class="form-select">
                    <option value="">Seçiniz...</option>
                </select>
            </div>
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </form>
    </div>
    <div class="col-4" >
        <h3 class="text-center">Kayıtlı Öğrenciler</h3>
        <hr />
        <ul>
            @foreach (var item in Model.KursKayitlari)
            {
                <li>@item.Ogrenci.OgrenciAd</li>
            }
        </ul>
    </div>
</div>



