@model IEnumerable<Ogretmen>

@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<h2 class="text-center">Öğrenci Listesi</h2>
<hr />
<a asp-action="Create" class="btn btn-success mb-3">Yeni Ekle</a>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Başlama Tarihi</th>
            <th style="width:150px;">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OgretmenId</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.BaslamaTarihi?.ToString("yyyy-MM-dd")</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>